# =============================================================================
# School Management System - Environment Variables Example
# =============================================================================
# This is a template file. Copy this to .env and fill in your actual values.
# 
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual values
# =============================================================================

# =============================================================================
# Environment Configuration
# =============================================================================
ENVIRONMENT=development

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================
DB_USERNAME=school_user
DB_PASSWORD=change_me_in_production

# =============================================================================
# Keycloak Database Configuration
# =============================================================================
KEYCLOAK_DB_PASSWORD=change_me_in_production

# =============================================================================
# Keycloak Authentication & Authorization
# =============================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change_me_in_production
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_CLIENT_SECRET=change_me_in_production
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
KEYCLOAK_ADMIN_CLIENT_SECRET=change_me_in_production

# =============================================================================
# RabbitMQ Message Broker
# =============================================================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=change_me_in_production

# =============================================================================
# Elasticsearch Configuration
# =============================================================================
ELASTICSEARCH_CLUSTER_NAME=elasticsearch
ELASTICSEARCH_NODES=localhost:9300

# =============================================================================
# MinIO Object Storage
# =============================================================================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=change_me_in_production

# =============================================================================
# Config Server Encryption
# =============================================================================
ENCRYPTION_KEYSTORE_PATH=classpath:keystore.jks
ENCRYPTION_KEYSTORE_PASSWORD=change_me_in_production
ENCRYPTION_KEY_ALIAS=config-server-key

# =============================================================================
# Docker Compose Variables
# =============================================================================
POSTGRES_PASSWORD=change_me_in_production
