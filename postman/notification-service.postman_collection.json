{
	"info": {
		"_postman_id": "notification-service-collection",
		"name": "Notification Service API",
		"description": "API collection for Notification Service - User Notifications",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Notifications",
			"item": [
				{
					"name": "Get Notifications",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/notifications?userId={{userId}}&unreadOnly=false",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "notifications"],
							"query": [
								{
									"key": "userId",
									"value": "{{userId}}"
								},
								{
									"key": "unreadOnly",
									"value": "false",
									"description": "Set to true to get only unread notifications"
								}
							]
						}
					}
				},
				{
					"name": "Get Unread Notifications",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/notifications?userId={{userId}}&unreadOnly=true",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "notifications"],
							"query": [
								{
									"key": "userId",
									"value": "{{userId}}"
								},
								{
									"key": "unreadOnly",
									"value": "true"
								}
							]
						}
					}
				},
				{
					"name": "Mark Notification as Read",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/notifications/:id/read",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "notifications", ":id", "read"],
							"variable": [
								{
									"key": "id",
									"value": "{{notificationId}}"
								}
							]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "accessToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "",
			"type": "string"
		},
		{
			"key": "notificationId",
			"value": "",
			"type": "string"
		}
	]
}

