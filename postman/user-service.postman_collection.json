							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "parents", ":userId", "students", ":studentId"],
							"variable": [
								{
									"key": "userId",
									"value": "{{parentUserId}}"
								},
								{
									"key": "studentId",
									"value": "{{studentId}}"
								}
							]
						}
					}
				}
			]
