							"raw": "{{baseUrl}}/api/v1/parents/:parentId/students",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "parents", ":parentId", "students"],
							"variable": [
								{
									"key": "parentId",
									"value": "{{parentUserId}}"
								}
							]
						}
					}
				},
				{
					"name": "Unlink Student from Parent",
					"request": {
