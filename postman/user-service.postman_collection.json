		{
			"name": "Users",
			"item": [
				{
					"name": "Get User by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/users/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "users", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{userId}}"
								}
							]
						}
					}
				},
				{
					"name": "Update User",
					"request": {
						"method": "PUT",
